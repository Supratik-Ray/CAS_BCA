          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "Updated Title" },
                "description": { "example": "Updated description" },
                "image": { "example": "https://example.com/newimage.jpg" }
              }
            }
          }
        ],
        "responses": {
          "default": { "description": "" }
