          { "name": "page", "in": "query", "type": "string" },
          { "name": "limit", "in": "query", "type": "string" }
        ],
        "responses": {
          "default": { "description": "" }
        }
      },
      "post": {
        "description": "",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "New Project" },
                "description": { "example": "Project description here" },
                "image": { "example": "https://example.com/image.jpg" }
              }
            }
          }
        ],
        "responses": {
          "default": { "description": "" }
        }
      }
    },

    "/api/v1/projects/{id}": {
      "get": {
        "description": "",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "default": { "description": "" }
        }
      },
      "delete": {
        "description": "",
        "security": [{ "BearerAuth": [] }],
