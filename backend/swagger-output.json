    }
  },
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "user@example.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": {
          "default": { "description": "" }
        }
      }
    },
    "/api/v1/auth/register": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "John Doe" },
                "email": { "example": "user@example.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": {
          "default": { "description": "" }
        }
      }
    },

